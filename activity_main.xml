<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_start_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:textSize="38dp"
                android:text="Controle de Viagens" />
        </Toolbar>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:useDefaultMargins="true"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:columnCount="2">

            <android.support.v7.widget.CardView
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="1in"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:onClick="OnClickNavDadosMotorista"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/motorista" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:text="Dados Motoristas"
                    android:textSize="15dp" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="1in"
                android:layout_height="wrap_content"
                android:onClick="onClickNavDadosVeiculo"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="255dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/caminhao" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:text="Dados Veiculo"
                    android:textSize="15dp" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="1in"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="15dp"
                android:onClick="onClickNavViagem"
                app:cardElevation="8dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="255dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/viagem" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:text="Dados Viagens"
                    android:textSize="15dp" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="1in"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/lista" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:text="Relatorios"
                    android:textSize="15dp" />

            </android.support.v7.widget.CardView>

        </GridLayout>
    </LinearLayout>
</ScrollView>