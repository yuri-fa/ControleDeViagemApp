<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_motorista_nomecompleto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="Nome Completo"/>

        <EditText
            android:id="@+id/form_nome_Completo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:labelFor="@id/txt_motorista_nomecompleto"
            android:singleLine="true">
            <requestFocus/>
        </EditText>
        <TextView
            android:id="@+id/txt_motorista_nomeguerra"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="Nome de Guerra"/>

        <EditText
            android:id="@+id/form_nome_guerra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:labelFor="@id/txt_motorista_nomeguerra"
            android:singleLine="true">
        </EditText>
</LinearLayout>